{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            // ディレクトリ構成が変更されたときに下記とnext.config.jsを変更すれば済むように定義
            "@app/*": ["./src/app/*"],
            "@util/*": ["./src/util/*"],
            "@types/*": ["./src/types/*"],
            "@api/*": ["./src/api/*"],
            "@components/*": ["./src/components/*"],
            "@contexts/*": ["./src/contexts/*"],
            "@lib/*": ["./src/lib/*"],
            "@styles/*": ["./src/styles/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "./.eslintrc.yml",
        "./next.config.js",
        "src/___/_"
    ],
    "exclude": ["node_modules"]
}
